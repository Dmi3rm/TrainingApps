<section id="userMenu">
    @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
{
        <div id="QuickUserDataContainer">
            <button id="btnQuickUserData" value="ShowPage" style="visibility:hidden;">My Data</button>
        </div>
        
        @Ajax.ActionLink("Account", "QuickUserData", "User",  new { },
                      new AjaxOptions { UpdateTargetId = "QuickUserDataContainer" },
                new { @id = "QuickUserDataButton", @style="visibility:hidden;"})
}
    else
    {
            <h4 id="hAuth">Авторизация</h4>
            <button id="btnLogin" value="Войти" >Вход</button>
            <button id="btnReg" value="Войти" >Регистрация</button>
        
        
            <div id="AuthContainer">
                
            </div>
        
            
        
            @Ajax.ActionLink("Account", "Login", new { },
                 new AjaxOptions { UpdateTargetId = "AuthContainer", OnFailure = "LoginOnFailure" },
                new { @id = "LoginButton", @style="visibility:hidden;"})
        
            @Ajax.ActionLink("Account", "Register", new { },
                 new AjaxOptions { UpdateTargetId = "AuthContainer", OnFailure = "LoginOnFailure" },
                new { @id = "RegisterButton", @style="visibility:hidden;"})
    }
</section>
            

